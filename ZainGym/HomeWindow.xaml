<Window x:Class="ZainGym.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:ZainGym.View"
        Title="HomeWindow" Height="700" Width="1024">
    <DockPanel Margin="4" LastChildFill="True">
        <Border Padding="4" DockPanel.Dock="Top" BorderBrush="GhostWhite" Background="LightGray" BorderThickness="1">
           <view:MemberListView  DataContext="{Binding Path=MemberListViewModel}"></view:MemberListView>
        </Border>
        <Border Padding="4" DockPanel.Dock="Bottom" BorderBrush="GhostWhite" Background="LightGray" BorderThickness="1">
            <view:AddMemberView DataContext="{Binding Path=AddMemberViewModel}"></view:AddMemberView>    
        </Border>
        
    </DockPanel>
</Window>
